<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_note"
        android:gravity="center"
        android:padding="80sp">

        <android.support.v7.widget.CardView
            android:id="@+id/dateofbirthcardid"
            android:layout_width="match_parent"
            android:layout_height="146sp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="68sp"
            app:cardElevation="6sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="92sp"
                        android:layout_height="92sp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="45sp"
                        app:cardElevation="4sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/babybron" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="62sp"
                        android:layout_marginLeft="-10sp"
                        android:layout_marginTop="18sp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="31sp"
                        app:cardElevation="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Date of Birth"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mycurrentcardid"
            android:layout_width="match_parent"
            android:layout_height="146sp"
            android:layout_below="@id/dateofbirthcardid"
            android:layout_gravity="center"
            android:layout_marginTop="-15sp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="68sp"
            app:cardElevation="4sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="92sp"
                        android:layout_height="92sp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="45sp"
                        app:cardElevation="4sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/currentage" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="62sp"
                        android:layout_marginLeft="-10sp"
                        android:layout_marginTop="18sp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="31sp"
                        app:cardElevation="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Current Date"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="62sp"
            android:layout_below="@+id/mycurrentcardid"
            android:layout_gravity="center"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="-15sp"
            android:layout_marginRight="35sp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="28sp"
            app:cardElevation="2sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_alignLeft="@+id/calculateid"
                    android:layout_marginLeft="-41dp"
                    android:layout_marginTop="16sp"
                    android:src="@drawable/agecalculator" />

                <TextView
                    android:id="@+id/calculateid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Calculate Age"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>